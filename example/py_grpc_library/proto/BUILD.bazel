    # True.
    srcs = ["routeguide_proto"],
    deps = [":routeguide_py_proto_library"],
    # grpc_only = True,
    visibility = ["//visibility:public"],
)

filegroup(
    name = "routeguide_features",
    srcs = [
        "routeguide_features.json",
    ],
    visibility = ["//visibility:public"],
)
